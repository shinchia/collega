<div class = "video_new">
  <div class ="edit_zenntai">


    <%= form_tag("/users/create") do %>
      <h5>ユーザー名</h5>
      <!-- value属性を用いて、初期値を設定してください -->
      <input name="name" value="<%= @user.name %>">
      <h5>メールアドレス</h5>
      <input name="email" value="<%= @user.email %>">
      <h5>職業</h5>
      <input name="email" value="<%= @user.job %>">
      <h5>資格等</h5>
      <input name="email" value="<%= @user.sikaku %>">
      <h5>その他</h5>
      <input name="email" value="<%= @user.sonota %>">
      <h5>ひとこと</h5>
      <input name="email" value="<%= @user.hitokoto %>">
      <input type="submit" value="新規登録">
    <% end %>
</div>
</div>
